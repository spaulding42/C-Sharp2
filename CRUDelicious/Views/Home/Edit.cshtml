@model Monster

<form asp-action="UpdateMonster" asp-controller="Home" asp-route-MonsterId="@Model.MonsterId" method="post">
    <div class = "d-flex spacing">
        <label asp-for="Name">Monster Name: </label>
        <input asp-for="Name">
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class = "d-flex spacing">
        <label asp-for="Height"></label>
        <input asp-for="Height">    
        <span asp-validation-for="Height" style="color: red"></span>
    </div>
    <div class = "d-flex spacing">
        <label asp-for="Description"></label>
        <textarea name = "Description" rows="5" cols="30" asp-for="Description"></textarea>  
        <span asp-validation-for="Description" style="color: red"></span>
    </div>
    
    <button type="submit" class="btn"> Submit </button>
</form>