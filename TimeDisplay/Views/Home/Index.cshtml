@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/style.css">

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="d-flex border">
        <div class="start">
            <div>Start Time</div>
            <div>@ViewBag.CurrentTime</div>
        </div>
        <div class= "start">
            <div>End Time</div>
            <div>@ViewBag.EndTime</div>
        </div>
    </div>
    <div>
        <div>Time Remaining</div>
        <div>@ViewBag.DifOfDates.Days Days, @ViewBag.DifOfDates.Hours Hours, @ViewBag.DifOfDates.Minutes Minutes, @ViewBag.DifOfDates.Seconds Seconds</div>
    </div>
</div>
